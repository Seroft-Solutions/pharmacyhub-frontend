        "composite": true,
        "composites": {
          "realm": ["ADMIN"]
        },
        "attributes": {
          "permissions": [
            "manage:system",
            "manage:security",
            "audit:system",
            "manage:users",
            "manage:roles",
            "manage:exams",
            "create:pharmacy",
            "edit:pharmacy",
            "delete:pharmacy",
            "view:pharmacy",
            "view:users",
            "grade:exams"
          ]
        }
      },
      {
        "name": "ADMIN",
        "description": "Administrator with management access",
        "composite": true,
        "composites": {
          "realm": ["MANAGER"]
        },
        "attributes": {
          "permissions": [
            "manage:users",
            "manage:roles",
            "manage:exams",
            "create:pharmacy",
            "edit:pharmacy",
            "delete:pharmacy",
