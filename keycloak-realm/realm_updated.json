              "view:pharmacy",
              "take:exams",
              "view:courses"
            ]
          },
          "realmRoles": ["USER"]
        }
      ]
    },
    {
      "name": "General Users",
      "path": "/General Users",
      "attributes": {
        "permissions": [
          "view:pharmacy",
          "take:exams",
          "manage:profile"
        ]
      },
      "realmRoles": ["USER"]
    }
