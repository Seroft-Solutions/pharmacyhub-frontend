        "composites": {
          "realm": ["USER"]
        },
        "attributes": {
          "permissions": [
            "sell:products",
            "view:inventory",
            "process:sales",
            "view:pharmacy"
          ]
        }
      },
      {
        "name": "INSTRUCTOR",
        "description": "Exam instructor",
        "composite": true,
        "composites": {
          "realm": ["USER"]
        },
        "attributes": {
          "permissions": [
            "manage:exams",
            "grade:exams",
            "view:users",
            "create:courses"
          ]
        }
      },
      {
        "name": "USER",
        "description": "Basic user",
        "attributes": {
          "permissions": [
            "view:pharmacy",
            "take:exams",
            "manage:profile"
          ]
        }
      }
    ],
    "client": {
      "pharmacyhub-client": [
        {
          "name": "manage-pharmacy",
