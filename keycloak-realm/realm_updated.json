            "approve:pharmacy",
            "edit:pharmacy",
            "view:pharmacy",
            "view:users",
            "manage:inventory",
            "approve:staff"
          ]
        }
      },
      {
        "name": "PHARMACIST",
        "description": "Registered pharmacist",
        "composite": true,
        "composites": {
          "realm": ["USER"]
        },
        "attributes": {
          "permissions": [
            "create:pharmacy",
            "edit:pharmacy",
            "view:pharmacy",
            "manage:inventory",
            "take:exams",
            "view:certification"
          ]
        }
      },
      {
        "name": "PROPRIETOR",
        "description": "Pharmacy proprietor",
        "composite": true,
        "composites": {
          "realm": ["USER"]
        },
        "attributes": {
          "permissions": [
            "own:pharmacy",
            "manage:pharmacy",
            "view:reports",
            "manage:staff",
            "view:pharmacy"
