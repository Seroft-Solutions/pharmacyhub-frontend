{
  "realm": "pharmacyhub",
  "enabled": true,
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator with full access",
        "attributes": {
          "permissions": [
            "manage:users",
            "manage:roles",
            "manage:exams",
            "create:pharmacy",
            "edit:pharmacy",
            "delete:pharmacy",
            "view:pharmacy",
            "view:users",
            "grade:exams"
          ]
        }
      },
      {
        "name": "PHARMACIST",
        "description": "Registered pharmacist",
        "attributes": {
          "permissions": [
            "create:pharmacy",
            "edit:pharmacy",
            "view:pharmacy",
            "take:exams"
          ]
        }
      },
      {
        "name": "USER",
        "description": "Basic user",
        "attributes": {
          "permissions": [
            "view:pharmacy",
            "take:exams"
          ]
        }
      },
      {
        "name": "INSTRUCTOR",
        "description": "Exam instructor",
        "attributes": {
          "permissions": [
            "manage:exams",
            "grade:exams",
            "view:users"
          ]
        }
      }
    ],
    "client": {
      "pharmacyhub-client": [
        {
          "name": "manage-pharmacy",
          "description": "Manage pharmacy operations",
          "composite": false
        },
        {
          "name": "view-pharmacy",
          "description": "View pharmacy details",
          "composite": false
        },
        {
          "name": "manage-exams",
          "description": "Manage examination system",
          "composite": false
        }
      ]
    }
  },
  "defaultRoles": ["USER"],
  "groups": [
    {
      "name": "Administrators",
      "path": "/Administrators",
      "attributes": {
        "permissions": [
          "manage:users",
          "manage:roles",
          "manage:exams",
          "create:pharmacy",
          "edit:pharmacy",
          "delete:pharmacy",
          "view:pharmacy",
          "view:users",
          "grade:exams"
        ]
      },
      "realmRoles": ["ADMIN"]
    },
    {
      "name": "Pharmacists",
      "path": "/Pharmacists",
      "attributes": {
        "permissions": [
          "create:pharmacy",
          "edit:pharmacy",
          "view:pharmacy",
          "take:exams"
        ]
      },
      "realmRoles": ["PHARMACIST"]
    },
    {
      "name": "Users",
      "path": "/Users",
      "attributes": {
        "permissions": [
          "view:pharmacy",
          "take:exams"
        ]
      },
      "realmRoles": ["USER"]
    },
    {
      "name": "Instructors",
      "path": "/Instructors",
      "attributes": {
        "permissions": [
          "manage:exams",
          "grade:exams",
          "view:users"
        ]
      },
      "realmRoles": ["INSTRUCTOR"]
    }
  ],
  "defaultGroups": ["/Users"],
  "clients": [
    {
      "clientId": "pharmacyhub-client",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "your-client-secret",
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000"
      ],
      "publicClient": false,
      "protocol": "openid-connect",
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocolMappers": [
        {
          "name": "groups",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-group-membership-mapper",
          "consentRequired": false,
          "config": {
            "full.path": "true",
            "claim.name": "groups",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        },
        {
          "name": "roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "claim.name": "roles",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        },
        {
          "name": "permissions",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "permissions",
            "claim.name": "permissions",
            "jsonType.label": "String",
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@pharmacyhub.com",
      "attributes": {
        "permissions": [
          "manage:users",
          "manage:roles",
          "manage:exams",
          "create:pharmacy",
          "edit:pharmacy",
          "delete:pharmacy",
          "view:pharmacy",
          "view:users",
          "grade:exams"
        ]
      },
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "groups": ["/Administrators"]
    }
  ],
  "requiredActions": [
    {
      "alias": "VERIFY_EMAIL",
      "name": "Verify Email",
      "enabled": true,
      "defaultAction": true,
      "priority": 1
    },
    {
      "alias": "UPDATE_PASSWORD",
      "name": "Update Password",
      "enabled": true,
      "defaultAction": false,
      "priority": 2
    }
  ],
  "browserFlow": "browser",
  "registrationFlow": "registration",
  "directGrantFlow": "direct grant",
  "resetCredentialsFlow": "reset credentials",
  "clientAuthenticationFlow": "clients",
  "emailTheme": "keycloak"
}