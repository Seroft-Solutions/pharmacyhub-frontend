# App Environment
NODE_ENV=development
APP_ENV=local

# NextAuth Configuration (if needed for other auth strategies)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=abc123def456ghi789jkl012mno345pqr678stu901

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_TIMEOUT=15000

# Frontend URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Settings
SESSION_MAX_AGE=86400
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_ATTEMPTS_WINDOW=900

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_LICENSING_ENABLED=true

# Optional Email Configuration (if you want to set up email)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user@example.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=no-reply@example.com